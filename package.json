{
  "name": "save-a-stray",
  "version": "1.0.0",
  "description": "An online platform connecting pets in need with potential adopters.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "server": "node dist/index.js",
    "server:dev": "ts-node index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "schema:export": "ts-node scripts/export-schema.ts",
    "format": "prettier --write \"server/**/*.{ts,js}\" \"shared/**/*.ts\" \"index.ts\"",
    "format:check": "prettier --check \"server/**/*.{ts,js}\" \"shared/**/*.ts\" \"index.ts\""
  },
  "author": "Chas Huggins",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@faker-js/faker": "^9.3.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.1.2",
    "connect-ensure-login": "^0.1.1",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "firebase-admin": "^13.0.2",
    "google-auth-library": "^9.15.0",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^5.16.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "mongoose-findorcreate": "^4.0.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "stripe": "^20.2.0",
    "uuid": "^11.0.5",
    "validator": "^13.12.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.0",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.4",
    "@types/validator": "^13.15.10",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
