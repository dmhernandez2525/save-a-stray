{
  "name": "save-a-stray",
  "version": "1.0.0",
  "description": "An online platform connecting pets in need with potential adopters.",
  "main": "dist/index.js",
  "scripts": {
    "heroku-postbuild": "npm run build && NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "server": "node dist/index.js",
    "server:dev": "ts-node index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "Chas Huggins",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.1.2",
    "connect-ensure-login": "^0.1.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "firebase-admin": "^13.0.2",
    "google-auth-library": "^9.15.0",
    "graphql": "^16.10.0",
    "graphql-http": "^1.22.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "mongoose-findorcreate": "^4.0.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "uuid": "^11.0.5",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.4",
    "@types/validator": "^13.15.10",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
